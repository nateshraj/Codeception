<body data-spy="scroll" data-target="#mainNavbar" id="homeSection">
  <!--Navbar starts-->
  <%- include('./includes/navigation.ejs') %>
  <!--Navbar ends-->

  <div id="fullpage">
    <!-- remove fp-auto-height-responsive -->
    <section id="homeSection" class="section fp-auto-height-responsive">
      <div class="container h-100">
        <div class="row h-100 align-items-center" id="homeRow">
          <!--Typewriter starts-->
          <div class="col-sm col-md-8 my-3">
            <section id="typeWriter"></section>
          </div>
          <!--Typewriter ends-->
          <!--Card with form starts-->
          <div class="col-sm col-md-4">
            <ul class="nav nav-pills nav-justified" role="tablist">
              <li class="nav-item">
                <a href="#signupCard"
                  class="nav-link btn btn-dark rounded-0 <%= activeCard.includes('signup') ? 'active' : ''%>"
                  data-toggle="tab">Signup</a>
              </li>
              <li class="nav-item">
                <a href="#loginCard"
                  class="nav-link btn btn btn-dark rounded-0 <%= activeCard.includes('login') ? 'active' : ''%>"
                  data-toggle="tab">Login</a>
              </li>
            </ul>
            <div class="card text-center text-dark rounded-0" id="homeCard">
              <div class="tab-content">
                <div class="card-body tab-pane <%= activeCard.includes('signup') ? 'active' : ''%>" id="signupCard">
                  <h3>Sign up now!</h3>
                  <form action="/signup" method="POST">
                    <div class="form-group mt-4">
                      <input type="text" class="form-control" placeholder="Username" name="username"
                        value="<% if (locals.form) { %><%= locals.form.username %><% } %>" required>
                    </div>
                    <div class="form-group">
                      <input type="email" class="form-control" placeholder="Email" name="email"
                        value="<% if (locals.form) { %><%= locals.form.email %><% } %>" required>
                    </div>
                    <div class="form-group">
                      <input type="password" class="form-control" placeholder="Password" name="password"
                        value="<% if (locals.form) { %><%= locals.form.password %><% } %>" required>
                    </div>
                    <div class="form-group">
                      <input type="password" class="form-control" placeholder="Confirm Password" name="confirmPassword"
                        required>
                    </div>
                    <input type="submit" value="Submit" class="btn btn-dark">
                  </form>
                </div>
                <div class="card-body tab-pane <%= activeCard.includes('login') ? 'active' : ''%>" id="loginCard">
                  <h3>Login now!</h3>
                  <form action="/login" method="POST">
                    <div class="form-group mt-4">
                      <input type="text" class="form-control" placeholder="Username or Email" name="usernameOrEmail"
                        value="<% if (locals.form) { %><%= locals.form.usernameOrEmail %><% } %>" required>
                    </div>
                    <div class="form-group">
                      <input type="password" class="form-control" placeholder="Password" name="password" required>
                    </div>
                    <a class="text-dark" href="#" data-toggle="modal" data-target="#resetPasswordModal">
                      <strong>I forgot my credentials</strong>
                    </a>
                    <br><br>
                    <input type="submit" value="Login" class="btn btn-dark">
                  </form>
                </div>
              </div>
            </div>
          </div>
          <!--Card with form ends-->
        </div>
      </div>
    </section>
    <!--Home Section ends-->

    <!--About Section starts-->
    <section id="aboutSection" class="section fp-auto-height-responsive">
      <div class="row h-100 mr-0" id="aboutRow">
        <div class="col-sm-6 d-none d-md-block px-0">

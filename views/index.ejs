        </div>
      </div>
    </section>
    <!--Contact Section ends-->
  </div>

  <!--Forgot Password modal starts-->
  <div class="modal" id="resetPasswordModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"> Reset my credentials </h5>
          <button class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <form id="resetPasswordForm" method="POST" action="/reset">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Username or Email" name="resetUsernameOrEmail"
              value="<% if (locals.form) { %><%= locals.form.resetUsernameOrEmail %><% } %>" required>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="submit" form="resetPasswordForm" class="btn btn-dark">Reset password</button>
        </div>
      </div>
    </div>
  </div>
  <!--Forgot Password modal ends-->

  <script>
    $(document).ready(function () {
      const e = JSON.parse('<%- JSON.stringify(locals.error) %>');
      if (e.param === 'resetToken' || e.param === 'verificationToken') {
        alert(e.msg);
      } else {
        $(`[name='${e.param}']`).addClass('is-invalid');
        $(`[name='${e.param}']`).after(`<div class="invalid-feedback">
            ${e.msg}
          </div>`);
        if (e.param === 'resetUsernameOrEmail') {
          $('#resetPasswordModal').modal('show');
        }
      }
    });

  </script>


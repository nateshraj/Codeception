    </section>
    <!--About Section ends-->

    <!--Contact Section starts-->
    <section id="contactSection" class="section fp-auto-height-responsive">
      <div class="row h-75 mr-0 align-items-center">
        <div class="col-sm-6 col-md-6 text-white">
          <div class="container">
            <h2>Contact</h2>
            <p class="lead">Lorem ipsum dolor sit, amet consectetur adipisicing elit. Accusantium vitae unde quo cum

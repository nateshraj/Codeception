  <section id="mainSection">
    <div class="container mt-5 p-4">
      <div class="mt-4">
        <!-- Profile Card -->
        <div class="card border-success text-center">
          <div class="card-header">
            <h5 class="card-title d-inline">My Profile</h5>
          </div>
          <div class="card-body">
            <img src="/images/profile.png" class="rounded-circle" id="profileImage"><br>
            <span class="mt-2 card-text lead">Username : <%= user.username %></span><br>
            <span class="lead">E-mail : <%= user.email %></span><br><br>
            <a class="btn btn-success text-white" data-toggle="modal" data-target="#resetProfileModal">
              Edit Profile
            </a>
          </div>
        </div>
        <!-- Submissions Card -->
        <div class="card border-success mt-4 text-center">
          <div class="card-header">
            <h5 class="card-title d-inline">My Submissions</h5>
          </div>
          <div class="card-body">
            <p class="card-text lead">
                <ul class="list-group">
                    <!-- <li class="list-group-item d-flex "> -->
                    <li class="list-group-item">
                      <span class="float-left">Fibonacci Series</span>
                      <span class="badge badge-primary badge-pill float-right">Javascript</span>
                      <span class="badge badge-primary badge-pill float-right">10</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                      Dapibus ac facilisis in
                      <span class="badge badge-primary badge-pill">2</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                      Morbi leo risus
                      <span class="badge badge-primary badge-pill">1</span>
                    </li>
                  </ul>
            </p>
          </div>
        </div>

      </div>
    </div>
  </section>
  <!--Main Section ends-->




